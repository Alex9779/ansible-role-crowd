[Unit]
Description=Atlassian Crowd
After=syslog.target

[Service]
User=daemon
Group=daemon
ExecStart=/opt/atlassian/crowd/start_crowd.sh
ExecStop=/opt/atlassian/crowd/stop_crowd.sh
PIDFile=/opt/atlassian/crowd/apache-tomcat/work/catalina.pid

[Install]
WantedBy=multi-user.target
